# Environment Variables for Student Progress Tracker

# Django Secret Key (change this in production)
SECRET_KEY=django-insecure-change-this-in-production-abc123

# Debug Mode (set to False in production)
DEBUG=True

# Database URL (PostgreSQL)
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/student_tracker

# For SQLite (development only), use:
# DATABASE_URL=sqlite:///./db.sqlite3

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
